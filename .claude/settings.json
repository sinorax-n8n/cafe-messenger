{
  "permissions": {
    "allow": ["Bash","WebFetch"],
    "deny": [],
    "defaultMode":"plan",
    "additionalDirectories": []
  },
  "statusLine": {
    "type": "command",
    "command": "pwsh -NoProfile -File .claude/statusline-command.ps1"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File .claude/hooks/on-stop.ps1"
          },
          {
            "type": "command",
            "command": "pwsh docker compose up desktop-dev"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File .claude/hooks/on-permission.ps1"
          }
        ]
      }
    ]
  },
  "outputStyle": "Explanatory"
}
